{% extends 'base.html.twig' %}

{% block header_title %}
    <section class="my-4">
        <h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
    </section>
{% endblock %}

{% block body %}

    <div class="d-flex flex-row">
        <a href="{{ path('task_create') }}" class="btn btn-success me-4">Créer une nouvelle tâche</a>
        <a href="{{ path('task_unfinished') }}" class="btn btn-info me-4">Consulter la liste des tâches à faire</a>
        <a href="{{ path('task_finished') }}" class="btn btn-secondary">Consulter la liste des tâches terminées</a>
    </div>
{% endblock %}
