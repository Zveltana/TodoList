{% extends 'base.html.twig' %}

{% block header_title %}
    <section class="my-4">
        <h1>Modifier <strong>{{ user.username }}</strong></h1>
    </section>
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form) }}
        <div class="col-md-6 form">
            <div class="mb-4">
                {{ form_row(form.username) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.email) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.role) }}
            </div>
        </div>

        <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
